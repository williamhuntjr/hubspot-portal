{% if logged_in is same as(true) %}
  <nav class="navbar navbar-expand-lg navbar-light bg-light" id="navbar-primary">
    <a class="navbar-brand" href="{{ site_url }}"><img src="{{ site_url }}/assets/images/logo.png" alt=""></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-primary-content" aria-controls="navbar-primary-content" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbar-primary-content">

      <ul class="navbar-nav ml-auto">
        <li class="nav-item {{ current_page == 'tickets' ? 'active' : '' }}">
          <a class="nav-link btn" href="{{ site_url }}/tickets">My Tickets</a>
        </li>
        {% if logged_in is same as(false) %}
        <li class="nav-item {{ current_page == 'login' ? 'active' : '' }}">
          <a class="nav-link btn" href="{{ site_url }}/login">Login</a>
        </li>
        {% else %}
        <li class="nav-item {{ current_page == 'downloads' ? 'active' : '' }}">
          <a class="nav-link btn" href="{{ site_url }}/downloads">Downloads</a>
        </li>
        <li class="nav-item {{ current_page == 'settings' ? 'active' : '' }}">
          <a class="nav-link btn" href="{{ site_url }}/settings">Settings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link btn" href="{{ site_url }}/logout">Logout</a>
        </li>
        {% endif %}

      </ul>

    </div>
  </nav>
{% endif %}
